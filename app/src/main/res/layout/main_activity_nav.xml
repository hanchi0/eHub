<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_activity_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/background_light"
        android:divider="#23222A"
        android:dividerHeight="1dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_activity_nav_ivProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/view_image_background" />

        <TextView
            android:id="@+id/main_activity_nav_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="홍길동"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_nav_ivProfile"
            app:layout_constraintLeft_toRightOf="@id/main_activity_nav_ivProfile"
            app:layout_constraintTop_toTopOf="@id/main_activity_nav_ivProfile" />

        <ImageView
            android:id="@+id/main_activity_nav_ivMyPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_nav_ivProfile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_activity_nav_ivProfile"
            app:srcCompat="@drawable/ic_right_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="19.5dp"
            android:background="#e3e3e3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_ivProfile" />

        <TextView
            android:id="@+id/main_activity_nav_tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:text="공지사항"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_ivProfile" />

        <ImageView
            android:id="@+id/main_activity_nav_ivNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_nav_tvNotice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_activity_nav_tvNotice"
            app:srcCompat="@drawable/ic_right_black" />

        <TextView
            android:id="@+id/main_activity_nav_tvSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:text="설정"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_tvNotice" />

        <ImageView
            android:id="@+id/main_activity_nav_ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_nav_tvSetting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_activity_nav_tvSetting"
            app:srcCompat="@drawable/ic_right_black" />

        <TextView
            android:id="@+id/main_activity_nav_tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:text="정보"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_tvSetting" />

        <ImageView
            android:id="@+id/main_activity_nav_ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_nav_tvInfo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_activity_nav_tvInfo"
            app:srcCompat="@drawable/ic_right_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="17.5dp"
            android:background="#e3e3e3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_tvInfo" />

        <TextView
            android:id="@+id/main_activity_nav_tvLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="37dp"
            android:text="로그아웃"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_nav_tvInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
