<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="56dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="498dp"
        android:text="추가정보"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etPhone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="433dp"
        android:hint="연락처"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etCRN"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="사업자등록번호"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etPhone" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etNick"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="별명"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etCRN" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etCarType"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="차종"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etNick" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etRadius"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="작업반경"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etCarType" />

    <EditText
        android:id="@+id/signUp_fragment_detail_employee_etLocation"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="작업지역"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etRadius" />

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:text="안전검사차량"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_fragment_detail_employee_etLocation" />

    <Button
        android:id="@+id/signUp_fragment_detail_employee_btnSkip"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/button_background_disable"
        android:text="건너뛰기"
        android:textColor="@color/button_text_disable"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/signUp_fragment_detail_employee_btnSignUp" />

    <Button
        android:id="@+id/signUp_fragment_detail_employee_btnSignUp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/button_background_disable"
        android:text="회원가입"
        android:textColor="@color/button_text_disable"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/signUp_fragment_detail_employee_btnSkip"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>