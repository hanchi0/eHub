<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.jaemion.eHub.userinfo.ui.UserInfoFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_info_fragment_modify_employee_ivProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/view_image_background" />

            <EditText
                android:id="@+id/user_info_fragment_modify_employee_etName"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_marginTop="13dp"
                android:text="@{viewModel.name}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_ivProfile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/user_info_fragment_modify_employee_etPhoneNum"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="194dp"
            android:hint="휴대폰 번호"
            android:text="@{viewModel.phoneNum}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/user_info_fragment_modify_employee_etBnum"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="사업자등록번호호"
            android:text="@{viewModel.bnum}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_etPhoneNum" />

        <EditText
            android:id="@+id/user_info_fragment_modify_employee_etCarType"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="차종"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_etBnum" />

        <EditText
            android:id="@+id/user_info_fragment_modify_employee_etWorkRange"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="작업반경"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_etCarType" />

        <Spinner
            android:id="@+id/user_info_fragment_modify_employee_spinnerWorkLocation"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_etWorkRange" />

        <CheckBox
            android:id="@+id/user_info_fragment_modify_employee_cbIsTested"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@id/user_info_fragment_modify_employee_spinnerWorkLocation"
            app:layout_constraintTop_toBottomOf="@id/user_info_fragment_modify_employee_spinnerWorkLocation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="안전검사차량"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@id/user_info_fragment_modify_employee_cbIsTested"
            app:layout_constraintLeft_toRightOf="@id/user_info_fragment_modify_employee_cbIsTested"
            app:layout_constraintTop_toTopOf="@id/user_info_fragment_modify_employee_cbIsTested" />

        <Button
            android:id="@+id/user_info_fragment_modify_employee_btnModify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/button_background_disable"
            android:onClick="@{viewModel::onClick}"
            android:text="수정하기"
            android:textColor="@color/button_text_disable"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
